---
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: {{ ocp4_workload_platform_engineering_workshop_showroom_deployer_application_name }}
  namespace: openshift-gitops
spec:
  generators:
  - list:
      elements:
{% for cluster in opencodequest.clusters %}
{% for group in cluster.groups %}
      - team: {{ group.name }}
        user1: {{ group.users[0] }}
        user2: {{ group.users[1] }}
        user3: {{ group.users[2] }}
{% endfor %}
{% endfor %}
  template:
    metadata:
      name: '{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_application_name }}-{% raw %}{{ team }}{% endraw %}'
      namespace: openshift-gitops
      finalizers:
      - resources-finalizer.argocd.argoproj.io
    spec:
      project: default
      source:
        repoURL: {{ ocp4_workload_platform_engineering_workshop_showroom_deployer_gitops_repo }}
        targetRevision: {{ ocp4_workload_platform_engineering_workshop_showroom_deployer_gitops_repo_tag }}
        path: {{ ocp4_workload_platform_engineering_workshop_showroom_deployer_gitops_repo_path }}
        helm:
          values: |
            deployer:
              domain: "{{ r_openshift_subdomain }}"
            guid: "{{ guid }}"
            content:
              repoUrl: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_content_repo_url }}"
              repoRef: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_content_repo_ref }}"
              antoraPlaybook: "default-site.yml"
              user_data: "bastion_password: {{ common_password }}\nopenshift_cluster_ingress_domain: {{ r_openshift_subdomain }}\ncommon_password: See the hero card password\nteam-id: {% raw %}{{ team }}{% endraw %}\nuser1: {% raw %}{{ user1 }}{% endraw %}\nuser2: {% raw %}{{ user2 }}{% endraw %}\nuser3: {% raw %}{{ user3 }}{% endraw %}\nopenai-url: {{ ocp4_worklod_platform_engineering_workshop_opencodequest_openai_url }}\nopenai-model: {{ ocp4_worklod_platform_engineering_workshop_opencodequest_openai_model }}\nopenai-key: {{ ocp4_worklod_platform_engineering_workshop_opencodequest_openai_key }}\nenvironment_variables:\n  TEAM_ID: {% raw %}{{ team }}{% endraw %}\n  DOMAIN: {{ r_openshift_subdomain }}\n"
            wetty:
              ssh:
                autoSshToBastion: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_wetty_auto_ssh }}"
                sshHost: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_wetty_ssh_host }}"
                sshPort: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_wetty_ssh_port }}"
                sshUser: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_wetty_ssh_user }}"
                sshAuth: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_wetty_ssh_auth }}"
                sshPass: "{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_wetty_ssh_pass }}"
      destination:
        server: https://kubernetes.default.svc
        namespace: '{{ ocp4_workload_platform_engineering_workshop_showroom_deployer_application_namespace }}'
      syncPolicy:
        automated:
          prune: false
          selfHeal: false
        syncOptions:
        - CreateNamespace=true
        - RespectIgnoreDifferences=true
        - ApplyOutOfSyncOnly=true
